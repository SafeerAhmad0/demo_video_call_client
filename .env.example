# Example environment variables for the application

# Database Configuration
DATABASE_URL=postgresql+asyncpg://<username>:<password>@localhost:5432/<database>
POSTGRES_DB=verifycall_db
POSTGRES_USER=verifycall_user
POSTGRES_PASSWORD=<your_password>

# JWT Settings
JWT_SECRET=<your_jwt_secret>

# Twilio Settings
TWILIO_ACCOUNT_SID=<your_twilio_account_sid>
TWILIO_AUTH_TOKEN=<your_twilio_auth_token>
TWILIO_PHONE_NUMBER=<your_twilio_phone_number>

# SMTP Settings
SMTP_HOST=<your_smtp_host>
SMTP_PORT=<your_smtp_port>
SMTP_USER=<your_smtp_user>
SMTP_PASSWORD=<your_smtp_password>
EMAIL_FROM=<your_email_from>
EMAIL_TO=<your_email_to>

# AWS Settings
AWS_ACCESS_KEY_ID=<your_aws_access_key_id>
AWS_SECRET_ACCESS_KEY=<your_aws_secret_access_key>
AWS_REGION=<your_aws_region>
S3_BUCKET=<your_s3_bucket>

# Jitsi Settings
JITSI_APP_ID=<your_jitsi_app_id>
JITSI_APP_SECRET=<your_jitsi_app_secret>
JITSI_DOMAIN=<your_jitsi_domain>

# Server Settings
PORT=5000
